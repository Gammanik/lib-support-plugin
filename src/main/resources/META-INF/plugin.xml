<idea-plugin>
    <id>org.example.lib-support</id>
    <name>Library support</name>
    <vendor email="aaa@bbb.com" url="http://www.jetbrains.com">Jbr</vendor>

    <!-- please see http://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.kotlin</depends>

    <extensions defaultExtensionNs="com.intellij">
        <codeInsight.lineMarkerProvider language="kotlin"
                                        implementationClass="LineMarkerProvider"/>
    </extensions>

    <actions>
        <action id="ShowPsiAction" class="ShowPsiAction" text="ShowPsi">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="first"/>
        </action>
    </actions>
</idea-plugin>